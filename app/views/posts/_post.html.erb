<tr>
  <th><%= post.id %></th>
  <td><%= post.date %></td>
  <td><%= truncate(post.rationale) %></td>
  <td><%= post.user.full_name %></td>
  <td><%= badge_btn post.status %></td>
  <td><%= link_to 'Edit', edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %></td>
  <td><%= link_to 'Delete', post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: { confirm: 'Are you sure?' } %></td>
</tr>  