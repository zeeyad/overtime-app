<tr>
  <th><%= post.id %></th>
  <td><%= post.overtime_request %></td>
  <td><%= post.date %></td>
  <td><%= link_to truncate(post.rationale), post %></td>
  <td><%= post.user.full_name %></td>
  <td><%= badge_btn post.status %></td>
  <td><%= link_to '<i class="fa fa-pencil index-icons" aria-hidden="true"></i>'.html_safe, edit_post_path(post), id: "edit_#{post.id}" if policy(post).update? %></td>
  <td><%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", data: { confirm: 'Are you sure?' } %></td>
</tr>  