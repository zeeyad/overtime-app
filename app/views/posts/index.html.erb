<h1>Posts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Rationale</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
  	<% @posts.each do |post| %>
    <tr>
      <th><%= post.id %></th>
      <td><%= post.date %></td>
      <td><%= truncate(post.rationale) %></td>
      <td><%= post.user.last_name %></td>
    </tr>
    <% end %>
  </tbody>
</table>